{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["ES2016", "DOM"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "main.ts"],
  "exclude": ["node_modules", "dist", "testes"]
}
